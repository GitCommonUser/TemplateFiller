@model TemplateFiller.ViewModels.CreateTemplateViewModel

@{
    ViewData["Title"] = "Новый шаблон";
}

<h2>Новый шаблон</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="File" class="control-label"></label>
        <input asp-for="File" type="file" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a asp-controller="Template" asp-action="Index" class="reg-button danger")">Отмена</a>
        <input type="submit" value="Создать" class="reg-button success" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}